{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": false,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "resolveJsonModule": true,
        "charset": "utf8",
        "declaration": true
    },
    "exclude": ["node_modules", "dist", "./test/**/*.test.ts"]
}
